input {
  redis {
    host => "<%= @redis %>"
    type => "redis-input"
    data_type => "list"
    key => "logstash"
    codec => json
  }
}

output {
<% if node['logstash_stack']['indexer']['debug'] -%>
  stdout { debug => true debug_format => "json"}
<% end -%>
  elasticsearch {
    host => "<%= @elasticsearch %>"
    cluster => "logstash"
  }
}
